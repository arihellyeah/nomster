<div class="booyah-box">
  <div class="row">
    <div class="col-4">
      <%= image_tag 'user.png'%>
    </div>
    <div class="col-8">
    <h1><%= @user.email %></h1>
      <h3>Member since <%= @user.created_at.strftime("%B %d, %Y") %>.</h3>
      <h4><%= @user.comments.count %> total comments.</h4>
      <h4><%= @user.comments.where(rating: '5_stars').count %> total 5 star reviews.</h4>
    </div>
  </div>
  <div class="clear"></div>
</div>
<br>
<h1 class="text-center">My Comments</h1>
<br>
<div class="row">
  <% @user.comments.each do |comment| %>
  <div class = "col-12 col-sm-6">
    <h2 class="text-center"><%= link_to comment.place.name, place_path(comment.place) %></h2>
    <blockquote>
      <% if comment.humanized_rating.present? %>
        <b><%= comment.humanized_rating %></b>
      <% end %>
      <b><%= comment.message %> </b>
      <small><%= comment.user.email %> </small>
    </blockquote>
  </div>
  <% end %>
</div>
<div class="clear"></div>
<br>
<h1 class="text-center">My Places</h1>
<br>
<% @user.places.each do |place| %>
  <div class="booyah-box col-10 offset-1">
      <% if place.photo.last.present? %>
        <%= image_tag place.photo.last.picture.url, class: 'thumb' %>
      <% end %>
      <br>
      <br>
      <h1><%= link_to place.name, place_path(place) %></h1>
      <i><%= place.address %></i> <br> <br>
      <p><%= place.description %></p> <br>
      <% if current_user && current_user == place.user %>
        <small>You posted this!</small>
      <% elsif place.user.present? %>
        <small><%= place.user.email%></small>
      <% end %>

  <% if place.comments.present? %>
    <div class = "col-12">
      <blockquote>
        <% if place.comments.last.humanized_rating.present? %>
          <b><%= place.comments.last.humanized_rating %></b> -
        <% end %>
        <b><%= place.comments.last.message %> </b>
        <% if current_user && current_user == place.comments.last.user %>
          <small>- from you</small>
          <% elsif place.comments.last.user.present? %>
            <small> - <%= place.comments.last.user.email%></small>
          <% end %>
      </blockquote>
    </div>
<% end %>
</div>
<% end %>
